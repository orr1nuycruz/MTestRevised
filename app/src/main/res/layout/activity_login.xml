<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@android:color/background_dark">


        <Button
            android:id="@+id/goRestaurant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="Restaurant View"/>


        <Button
            android:id="@+id/logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="100dp"
            android:text="logout"
            android:visibility="invisible" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtloginMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:layout_gravity="center"/>

            <ImageView
                android:layout_width="301dp"
                android:layout_height="273dp"
                android:layout_gravity="center"
                android:src="@drawable/munchies_logo" />



            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtLoginUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email: "
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/editLoginUserID"
                    android:layout_width="250dp"
                    android:visibility="invisible"
                    android:layout_height="wrap_content"
                    />

            </LinearLayout>


            <LinearLayout android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent">

                <TextView
                    android:id="@+id/txtLoginPassword"
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:text="@string/password"
                    android:textSize="18sp"/>

                <EditText
                    android:id="@+id/editLoginPassword"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"
                    android:inputType="textPassword"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="126dp"
                android:orientation="vertical">
                <Button
                    android:id="@+id/btnLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/login"
                    android:visibility="invisible" />

                <Button
                    android:id="@+id/btnRegisterRedirect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/register"
                    android:visibility="invisible" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/customerView"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/next"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Restaurant" />

                <Button
                    android:id="@+id/CheckRows"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/changePass" />

                <Button
                    android:id="@+id/addCreditCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/addCreditCard"/>

                <Button
                    android:id="@+id/viewCreditCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/viewCreditCard"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/adminView"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/addRes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="120dp"
                    android:layout_gravity="center_horizontal"
                    android:text="Add Restaurant"/>

            </LinearLayout>



        </LinearLayout>

    </ScrollView>

</LinearLayout>